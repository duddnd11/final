<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.yw.mapper.MemberMapper">
 	<insert id="insertMember">
		INSERT INTO simple_member(id,pw,name,imagename) VALUES(#{id},#{pw},#{name},#{imagename}) 	
 	</insert>
 	<select id="loginMember" resultType="com.yw.vo.MemberVo">
 		SELECT * FROM simple_member WHERE id=#{id} AND pw=#{pw}
 	</select>
 	<update id="modifyMember">
 		UPDATE simple_member SET pw=#{pw},name=#{name},imagename=#{imagename} WHERE id = #{id}
 	</update>
 </mapper>